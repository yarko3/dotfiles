[alias]
    br = branch
    bra = branch --all
    ca = commit --amend --no-edit
    ci = commit
    co = checkout
    cob = checkout -b
    df = diff
    dfc = log --left-right --graph --cherry-mark --oneline HEAD...
    dom = diff origin/master -w
    dum = diff upstream/master -w
    f = fetch
    fa = fetch --all
    lg = log --decorate --oneline --graph --branches --date=relative --format=format:'%C(bold blue)%h%C(reset) - %C(bold blue)(%ar) %C(bold yellow)%d%C(reset) %C(green)%s%C(reset) %C(dim green)- %an%C(reset)'
    lp = log -p --stat
    pl = pull
    pr = pull-request
    pr-clean = "!git for-each-ref refs/heads/pr/* --format='%(refname)' | while read ref ; do branch=${ref#refs/heads/} ; git branch -D $branch ; done"
    pu = push
    rb = rebase
    rba = rebase --abort
    rbc = rebase --continue
    rmt = remote -v
    rom = rebase origin/master -i
    rum = rebase upstream/master -i
    sh = stash show -p
    st = status

    # List aliases
    la = "!git config -l | grep alias | cut -c 7-"
[color]
    ui = true
    status = true
    branch = true
    diff = true
[core]
    pager = less -F -X -R
    preloadindex = true
[mergetool "fugitive"]
    cmd = vim -f -c \"Gvdiff\" \"$MERGED\"
[mergetool]
    keepBackup = false
[merge]
    tool = fugitive
[push]
    default = simple
[init]
    templatedir = ~/.git_template
[credential]
    helper = cache --timeout=432000
[grep]
    lineNumber = true
[advice]
    detachedHead = false
[url "git://github.com/ghc/packages-"]
    insteadOf = git://github.com/ghc/packages/

# Allow local customizations
[include]
    path = ~/.gitconfig_local
