[color]
    ui = true
    status = true
    branch = true
    diff = true
[core]
    pager = less -F -X -R
    preloadindex = true
[alias]
    br = branch
    ca = commit --amend --no-edit
    ci = commit
    co = checkout
    db = "!echo 'Deleting all branches merged into master ...' ; \
       git fetch --all --prune ; \
       git branch --merged master | grep -Ev '(master|releases)' | xargs -n 1 git branch -d ; \
       git branch --merged master -r | grep -Ev '(master|releases)' \
            | grep $USER | cut -f2- -d'/' | xargs -n 1 git push --delete $USER "
    df = diff
    dfc = diff --cached
    dfh = diff -- .
    dfs = diff --stat
    dom = diff origin/master -w
    doms = diff origin/master -w --stat
    f = fetch
    fa = fetch --all
    l = log
    ld = log --decorate
    lg = log --decorate --oneline --graph --branches --date=relative --format=format:'%C(bold blue)%h%C(reset) - %C(bold blue)(%ar) %C(bold yellow)%d%C(reset) %C(green)%s%C(reset) %C(dim green)- %an%C(reset)'
    p = pull
    pu = push
    rb = rebase
    rba = rebase --abort
    rbc = rebase --continue
    rom = rebase origin/master -i
    s = show
    ss = show --stat
    shows = show --stat
    st = status
    um = branch --set-upstream-to=origin/master

    # List aliases
    la = "!git config -l | grep alias | cut -c 7-"
[mergetool "fugitive"]
    cmd = vim -f -c \"Gvdiff\" \"$MERGED\"
[mergetool]
    keepBackup = false
[merge]
    tool = fugitive
[push]
    default = simple
[init]
    templatedir = ~/.git_template
[credential]
    helper = cache --timeout=432000
[grep]
    lineNumber = true
[advice]
    detachedHead = false
[url "git://github.com/ghc/packages-"]
    insteadOf = git://github.com/ghc/packages/

# Allow local customizations
[include]
    path = ~/.gitconfig_local
